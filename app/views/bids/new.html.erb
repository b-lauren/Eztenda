<div class="container">
  <%= simple_form_for [@tender, @bid] do |f| %>

    <div class="form-inputs">
      <%= f.label :offer_description,
                      label: "Bid description" %>
      <%= f.rich_text_area :offer_description,
                            required: true %>
    </div>

    <div class="form-inputs">
      <%= f.input :offer_price,
                label: "Offer price in Â£s",
                as: :integer  %>
    </div>

    <div class="form-inputs">
      <%= f.input :offer_add_ons,
                required: true %>
    </div>

    <div class="form-inputs">
      <%= f.input :wholesaler,
                required: true %>
    </div>

    <div class="form-inputs">
    <%= f.input :product_id,
                :as => :select,
                :collection => Product.all,
                as: :radio_buttons %>
    </div>

    <div class="form-actions">
      <%= f.submit "Submit", class: "btn btn-ghost" %>
    </div>

  <% end %>
</div>
